[Unit]
Description=Go-Redis Server
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/go-redis
ExecStart=/root/go-redis/go-redis /root/go-redis/config/redis.conf /root/go-redis/data/
Restart=always
RestartSec=5
LimitNOFILE=65535
StandardOutput=append:/var/log/go-redis.log
StandardError=append:/var/log/go-redis.log

[Install]
WantedBy=multi-user.target